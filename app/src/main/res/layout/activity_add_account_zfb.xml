<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@color/homef7"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".view.activity.AddAccountZfbActivity">
    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:background="@color/white" android:layout_marginTop="10dp"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="支付宝账号"
            android:textColor="@color/colorAccent" android:textSize="15sp"
            android:layout_marginTop="20dp" />
        <EditText
            android:layout_width="match_parent" android:id="@+id/real_zfbaccout_id"
            android:layout_height="wrap_content" android:background="@null"
            android:hint="请填写您的支付宝账号" android:layout_marginTop="10dp"
            android:textSize="15sp" android:singleLine="true"
            android:maxLines="1"/>
        <View
            style="@style/line1" android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="实名认证"
            android:textColor="@color/colorAccent" android:textSize="15sp"
            android:layout_marginTop="20dp" />
        <EditText
            android:layout_width="match_parent" android:id="@+id/real_name_id"
            android:layout_height="wrap_content" android:background="@null"
            android:hint="请填写您的真实姓名" android:layout_marginTop="10dp"
            android:textSize="15sp" android:singleLine="true"
            android:maxLines="1"/>
        <View
            style="@style/line1" android:layout_marginTop="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent" android:id="@+id/sure_btn"
            android:layout_height="50dp" android:background="@color/colorAccent"
            android:textColor="@color/white" android:text="确认"
            android:layout_alignParentBottom="true" android:gravity="center"
            android:textSize="17sp"/>
    </RelativeLayout>
</LinearLayout>