<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/homef7"
    android:layout_height="120dp"
    tools:context=".view.activity.CowClaimPastRecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp" android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical" android:paddingRight="15dp"
            android:layout_marginLeft="15dp" android:layout_toLeftOf="@+id/pasture_img_id">
            <TextView
                android:layout_width="match_parent" android:id="@+id/pasture_des_id"
                android:layout_height="wrap_content" android:lineSpacingExtra="5dp"
                android:textSize="14sp" android:text="安格斯牧场"
                android:layout_marginTop="20dp" android:ellipsize="end" android:maxLines="2"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="match_parent" android:id="@+id/pasture_time_id"
                android:layout_height="match_parent" android:textColor="@color/txthui"
                android:textSize="14sp" android:text="2019-1-1"
                android:layout_marginTop="20dp" android:gravity="bottom"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="110dp" android:id="@+id/pasture_img_id"
            android:layout_height="80dp" android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>