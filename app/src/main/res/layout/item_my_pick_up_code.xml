<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_10"
    tools:context=".view.activity.PickUpCodeActivity">

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/wenzi_hei"
        />
    <TextView
        android:id="@+id/weizhi_goods_norm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规格"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/wenzi_hei"
        android:layout_below="@+id/tv_goods_name"
        />
    <TextView
        android:id="@+id/tv_goods_norm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/gray_666666"
        android:layout_below="@+id/tv_goods_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        />
    <TextView
        android:id="@+id/weizhi_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/wenzi_hei"
        android:layout_below="@+id/weizhi_goods_norm"
        />
    <TextView
        android:id="@+id/tv_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/gray_666666"
        android:layout_below="@+id/weizhi_goods_norm"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        />
    <TextView
        android:id="@+id/weizhi_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/wenzi_hei"
        android:layout_below="@+id/tv_goods_num"
        />
    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/wenzi_hei"
        android:layout_below="@+id/tv_goods_num"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        />
    <TextView
        android:id="@+id/weizhi_goods_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取货状态"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/wenzi_hei"
        android:layout_below="@+id/weizhi_goods_price"
        />
    <TextView
        android:id="@+id/tv_goods_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/qian_red"
        android:layout_below="@+id/weizhi_goods_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        />
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/weizhi_goods_status"/>
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray_999999"
        android:layout_below="@+id/iv_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到店扫码取货"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/wenzi_hei"
        android:layout_below="@+id/tv_code"
        android:layout_marginBottom="30dp"
        />
</RelativeLayout>