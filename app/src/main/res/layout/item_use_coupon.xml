<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/homef7"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.activity.BuyCowsPlanActivity">

        <LinearLayout
            android:layout_width="match_parent" android:id="@+id/lv_bg_id"
            android:layout_height="140dp" android:orientation="vertical"
            android:background="@mipmap/choosecoupon" android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"  android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content" android:id="@+id/coupon_type_id"
                android:layout_height="wrap_content" android:textSize="17sp"
                android:text="牛肉劵" android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="￥"
                    android:textColor="@color/black" android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/money_txt_id"
                    android:layout_height="wrap_content" android:text="30"
                    android:textSize="30sp" android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content" android:id="@+id/enough_money_id"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:text="· 满200元可用 ·" android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal" android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content" android:id="@+id/validity_time_id"
                android:layout_height="wrap_content" android:text="有效期至2018.09.09"
                android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/unvalidity_showbg_lv"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:background="@color/white"  android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:drawableLeft="@mipmap/unuseredimg"
            android:text="不可用原因" android:textColor="@color/qian_red"
            android:drawablePadding="5dp"  android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp" android:textSize="11sp"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/enough_money_txt_id"
            android:layout_height="wrap_content" android:text="满500元可用"
            android:textSize="11sp" android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/enough_money_des_id"
            android:layout_height="wrap_content" android:text="仅用于购买商城牛肉"
            android:textSize="11sp" android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>