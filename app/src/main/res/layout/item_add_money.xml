<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.activity.CowClaimPastRecordActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp" android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp" android:id="@+id/order_txt_id"
                android:layout_height="wrap_content" android:text="订单编号"
                android:gravity="center" android:textSize="14sp" />
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp" android:id="@+id/add_money_id"
                android:layout_height="wrap_content" android:text="+10"
                android:gravity="center" android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp" android:id="@+id/time_txt_id"
                android:layout_height="wrap_content" android:text="2018-10-2"
                android:gravity="center" android:textSize="14sp" />
        </LinearLayout>
    <View
      style="@style/line1"/>
</LinearLayout>