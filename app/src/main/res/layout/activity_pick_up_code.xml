<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MyContractActivity">
    <include layout="@layout/include_title"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipe_layout"
        android:layout_height="match_parent"
        android:orientation="vertical"  android:fadingEdge="vertical"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/pick_up_bg"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/loading_layout"
                android:id="@+id/loading_layout"  />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ry_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/rv_bg"
                android:layout_height="match_parent" android:visibility="gone">
                <ImageView
                    android:id="@+id/tv_text_null"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content" android:background="@mipmap/pick_up_null"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>