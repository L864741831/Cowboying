<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".view.activity.OptionReturnActivity" android:background="@color/white"
    android:layout_marginBottom="5dp" android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <ImageView
        android:layout_width="100dp" android:id="@+id/img_id"
        android:layout_height="100dp" android:layout_marginTop="7dp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="100dp" android:id="@+id/txt_name_id"
        android:layout_height="wrap_content" android:text=""
        android:layout_below="@+id/img_id" android:textColor="@color/black"
        android:gravity="center_horizontal" android:maxLines="1"
        android:ellipsize="end" android:layout_marginTop="13dp"/>
</RelativeLayout>