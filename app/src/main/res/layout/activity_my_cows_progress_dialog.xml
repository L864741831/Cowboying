<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvs_id"
    android:layout_width="match_parent"  android:orientation="vertical"
    android:layout_height="match_parent"  android:background="#70000000"
    android:gravity="center">
    <LinearLayout
        android:layout_width="300dp" android:background="@drawable/cicle_write_bg"
        android:layout_height="wrap_content" android:layout_centerInParent="true"
        android:orientation="vertical" android:paddingBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:padding="15dp">
            <TextView
                android:layout_width="match_parent" android:id="@+id/show_title_id"
                android:layout_height="wrap_content" android:text="认领进度查询"
                android:textSize="15sp"
                android:textColor="#9a7341" android:gravity="center_horizontal"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"   android:layout_marginTop="1dp"
            android:layout_height="0.5dp" android:background="@color/colorGold_1"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:background="@mipmap/ischecked" />
            <View
                android:layout_width="1.5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_circle"
                android:layout_marginTop="-2dp"
                android:background="@color/colorGold_1"
                android:layout_height="match_parent"/>
        </RelativeLayout>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款确认已到账并无异常"
                android:textSize="14sp"
                android:textColor="@color/wenzi_hei"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <View
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colorGold_1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ischecked" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="款项审核中"
                android:textSize="14sp"
                android:textColor="@color/wenzi_hei"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <View
                    android:layout_above="@+id/iv_3"
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colorGold_1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/vw_1"
                    android:layout_below="@+id/iv_3"
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colormessegegray"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ischecked_now" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛只交易中"
                android:textSize="14sp"
                android:textColor="@color/wenzi_hei"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <View
                    android:id="@+id/vw_2"
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colormessegegray"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/unchecked" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛只交易成功"
                android:textSize="14sp"
                android:textColor="@color/wenzi_hei"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <View
                    android:id="@+id/vw_3"
                    android:layout_above="@+id/iv_5"
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colormessegegray"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/vw_4"
                    android:visibility="gone"
                    android:layout_below="@+id/iv_5"
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colormessegegray"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/unchecked" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入栏成功，开始计息"
                android:textSize="14sp"
                android:textColor="@color/wenzi_hei"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_dingqi"
           android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <View
                    android:layout_above="@+id/iv_6"
                    android:layout_marginBottom="-2dp"
                    android:layout_width="1.5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-2dp"
                    android:background="@color/colorGold_1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/iv_6"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ischecked_now" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView

                android:id="@+id/tv_lock_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款确认已到账并无异常"
                android:textSize="14sp"
                android:textColor="@color/wenzi_hei"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_lock_month"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="付款确认已到账并无异常"
                android:textSize="11sp"
                android:textColor="@color/wenzi_hei"
                android:gravity="center_vertical"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
