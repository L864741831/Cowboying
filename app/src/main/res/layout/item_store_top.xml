<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content" android:background="@color/white"
    tools:context=".view.activity.InviteFriendHistoryActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp" android:orientation="horizontal"
            android:gravity="center_vertical" >
                <ImageView
                    android:layout_width="0dp" android:id="@+id/last_go_img"
                    android:layout_weight="0.3" android:layout_gravity="center"
                    android:layout_height="wrap_content" android:src="@mipmap/firstgo"/>
                <ImageView
                    android:layout_width="0dp" android:id="@+id/goods_info_img"
                    android:layout_weight="0.4" android:layout_gravity="center"
                    android:layout_height="wrap_content" android:src="@mipmap/cowbeefimg"
                    android:scaleType="fitXY"/>
                  <ImageView
                    android:layout_width="0dp" android:id="@+id/first_go_img"
                    android:layout_weight="0.3" android:layout_gravity="center"
                    android:layout_height="wrap_content" android:src="@mipmap/lastgo"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content" android:id="@+id/nane_beef_id"
            android:layout_height="wrap_content" android:text="牛胸肉"
            android:gravity="center" android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" android:textColor="@color/colorAccent"
            android:textSize="15sp"/>
        <com.ibeef.cowboying.view.customview.AmountViewStoreBeef
            android:layout_width="wrap_content" android:id="@+id/amout_num_id"
            android:layout_height="32dp"    app:btnWidth="21dp"
            app:tvWidth="27dp"  android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_marginTop="10dp"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                android:layout_width="0dp" android:id="@+id/beef_size_id"
                android:layout_weight="0.33" android:textSize="13sp"
                android:layout_height="wrap_content" android:text="规格：00g/袋"
                android:gravity="right"/>
            <TextView
                android:layout_width="0dp" android:id="@+id/beef_price_id"
                android:layout_weight="0.33" android:textSize="13sp"
                android:layout_height="wrap_content" android:text="价格：00元"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp" android:id="@+id/beef_stock_id"
                android:layout_weight="0.33" android:textSize="13sp"
                android:layout_height="wrap_content" android:text="库存：00/袋"
                android:gravity="left"/>
        </LinearLayout>
</LinearLayout>