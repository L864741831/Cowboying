<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_10"
    tools:context=".view.activity.PickUpCodeActivity">

    <TextView
        android:id="@+id/tv_service_id"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:text="服务单号：12345678"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray_666666"
        />
    <View
        android:layout_below="@+id/tv_service_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linen"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_service_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" android:id="@+id/ry_id"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <RelativeLayout
        android:id="@+id/rl_weizhi"
        android:layout_width="match_parent"
        android:layout_below="@+id/ry_id"
        android:background="@color/homef7"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_after_sale_type"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/wenzi_hei_2"
            android:layout_height="wrap_content"
            android:text="仅退款"
            android:drawableLeft="@mipmap/after_sale_right"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            />
        <View
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_toRightOf="@+id/tv_after_sale_type"
            android:layout_marginLeft="20dp"
            android:background="@color/gray_666666"
            />
        <TextView
            android:id="@+id/tv_after_sale_status"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/wenzi_hei_2"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/v_line"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enterright"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_weizhi"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <TextView
            android:background="@drawable/shape_oval_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/gray_666666"
            android:padding="6dp"
            />
    </RelativeLayout>


</RelativeLayout>