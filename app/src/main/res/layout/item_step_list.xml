<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:id="@+id/rv_id" android:paddingLeft="15dp"
    android:background="@color/white" android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:id="@+id/view_up"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:background="@drawable/shop_logisticsdetail_line" />

        <ImageView
            android:id="@+id/stepicon_iv"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/stepchose" />

        <View
            android:id="@+id/line_v"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_logisticsdetail_line" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/skyblue"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-10 00:00"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="0.5dp"
            android:background="#66999999"/>
    </LinearLayout>
</LinearLayout>