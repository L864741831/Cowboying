<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context=".view.activity.CowClaimPastRecordActivity">
    <RelativeLayout
        android:layout_width="250dp" android:id="@+id/rv_type_show"
        android:layout_height="140dp" android:background="@mipmap/homenewcarview"
        android:layout_marginLeft="10dp"   android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" >
        <TextView
            android:layout_width="130dp" android:id="@+id/type_name_id"
            android:layout_height="wrap_content" android:textColor="@color/black"
            android:text="新手福利" android:textSize="16sp" android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp" android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/type_time_id"
            android:layout_height="wrap_content" android:textSize="10sp"
            android:text="新手7天" android:textColor="@color/black"
            android:layout_marginTop="20dp" android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" android:layout_toRightOf="@+id/type_name_id"
            android:gravity="right" android:maxLines="1" android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent" android:id="@+id/type_rate_id"
            android:layout_height="wrap_content" android:textSize="12sp"
            android:text="预期牛肉回报率（年华）" android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp" android:layout_below="@+id/type_name_id"
            android:layout_marginRight="15dp" android:layout_alignLeft="@+id/type_name_id"
            android:maxLines="1" android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content" android:id="@+id/show_rate_id"
            android:layout_height="wrap_content" android:textColor="@color/red"
            android:text="10%" android:layout_below="@+id/type_rate_id"
            android:textSize="19sp" android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent" android:id="@+id/des_type_id"
            android:layout_height="wrap_content" android:text="一元体验 十倍收益"
            android:textColor="@color/colorAccent" android:textSize="12sp"
            android:layout_alignLeft="@id/type_rate_id"  android:layout_below="@+id/show_rate_id"
            android:layout_marginTop="10dp" android:layout_marginRight="15dp"
            android:maxLines="1" android:ellipsize="end"/>
    </RelativeLayout>
</RelativeLayout>