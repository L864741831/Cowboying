<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/homef7"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.AddPayPwdActivity">
    <include layout="@layout/include_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp" android:text="为了您的账户安全，本次需要验证手机号"
        android:textSize="14sp" android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"  android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="false"
            android:enabled="false"
            android:maxLines="1"
            android:text="手机号码"
            android:textColor="#313131"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_mobile"    android:digits="0123456789"
            android:layout_width="match_parent"  android:inputType="number|numberDecimal"
            android:layout_height="50dp"   android:singleLine="true"
            android:maxLength="11"
            android:layout_gravity="bottom" android:hint="请输入手机号"
            android:layout_marginRight="20dp"
            android:background="@null" android:textSize="14sp"
            android:paddingLeft="15dp"   android:textCursorDrawable="@drawable/edit_cursor_color" />
    </LinearLayout>

    <View style="@style/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"  android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="false"
            android:enabled="false"
            android:singleLine="true"
            android:text="验证码"
            android:textColor="#313131"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"  android:inputType="number|numberDecimal"
            android:layout_height="50dp"
            android:layout_gravity="bottom" android:hint="验证码"
            android:layout_weight="5" android:maxLines="1"
            android:background="@null" android:singleLine="true"
            android:textSize="14sp" android:paddingLeft="15dp"
            android:textCursorDrawable="@drawable/edit_cursor_color" />

        <CheckBox
            android:id="@+id/btn_code"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="3" android:button="@null"
            android:background="@drawable/shape_oval_btn"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white" />

    </LinearLayout>
    <View style="@style/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"  android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="false"
            android:enabled="false"
            android:maxLines="1"
            android:text="支付密码"
            android:textColor="#313131"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/add_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:maxLines="1"
            android:layout_gravity="bottom" android:hint="请设置六位支付密码"
            android:layout_marginRight="20dp" android:singleLine="true"
            android:background="@null"
            android:textSize="14sp"     android:maxLength="6"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <View style="@style/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"  android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="false"
            android:enabled="false"
            android:maxLines="1"
            android:text="确认密码"
            android:textColor="#313131"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/sure_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:maxLines="1"
            android:layout_gravity="bottom" android:hint="请确认支付密码"
            android:layout_marginRight="20dp" android:singleLine="true"
            android:background="@null"  android:maxLength="6"
            android:textSize="14sp"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_square_btn"
            android:enabled="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>