<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ver="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".view.activity.IdentifyCodeActivity" android:background="@color/white">
    <include layout="@layout/include_white_title"/>
    <TextView
        android:layout_width="wrap_content" android:id="@+id/stadus_title_txt_id"
        android:layout_height="wrap_content" android:textColor="@color/black"
        android:text="输入验证码" android:textSize="20sp" android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="已发送六位数验证码至"
        android:layout_gravity="center" android:layout_marginTop="15dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content" android:id="@+id/mobile_txt_id"
        android:layout_height="wrap_content" android:textColor="@color/black"
        android:text="+86 18000000000" android:textSize="16sp"
        android:layout_gravity="center" android:layout_marginTop="5dp"/>
    <com.ranhan.cowboying.utils.VerificationCodeInput
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ver:box="6" android:layout_gravity="center"
        ver:child_h_padding="2dp"
        ver:child_width="45dp"
        ver:child_height="40dp" ver:inputType="number"
        android:layout_centerInParent="true"
        android:id="@+id/verificationCodeInput_id"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="230dp" android:id="@+id/sure_id"
        android:layout_height="40dp" android:background="@drawable/shape_square_btn"
        android:text="确定" android:textColor="@color/white"
        android:gravity="center" android:textSize="16sp" android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content" android:id="@+id/again_getcode_id"
        android:layout_height="wrap_content" android:text="重新发送"
        android:textColor="@color/skyblue" android:layout_gravity="center"
        android:layout_marginTop="10dp" android:textSize="15dp"/>
</LinearLayout>