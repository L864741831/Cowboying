<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/include_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <View
               android:layout_width="345dp"
               android:layout_height="1dp"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_gravity="center_horizontal"
               android:background="@color/gray_666666"/>
            <TextView
                android:id="@+id/tv_apply_top_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请等待商家处理"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/wenzi_hei"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_apply_top_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还剩2天23小时"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/gray_666666"
                />
            <View
                android:layout_width="345dp"
                android:layout_marginTop="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray_666666"/>

            <!--申请中-->
            <LinearLayout
                android:id="@+id/ll_apply_ing"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已成功发起售后申请，请耐心等待商家处理。"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/wenzi_hei_2"
                />
            <TextView
                android:drawableLeft="@mipmap/unchecked"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家同意，将自动退款给您；退款金额原路返回时可能会有延迟，请耐心等待。"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_666666"
                />
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/unchecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如商家拒绝，您可以修改申请后再次发起，商家将会重新处理。"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_666666"
                />
            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/unchecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如商家超时未处理，退款申请达成，系统会自动返款给您，其中或许会有延迟，请耐心等待"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_666666"
                />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/homef7"
                    android:layout_marginTop="15dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/bt_change_apply"
                        android:background="@drawable/shape_oval_line_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改申请"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/gray_666666"
                        android:padding="6dp"
                        />
                    <TextView
                        android:id="@+id/bt_see_detail"
                        android:layout_toLeftOf="@+id/bt_change_apply"
                        android:background="@drawable/shape_oval_line_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="撤销申请"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/gray_666666"
                        android:padding="6dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <!--退货成功-->
            <RelativeLayout
                android:id="@+id/rl_return_success_1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="42dp">
                <TextView
                    android:id="@+id/tv_weizhi_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退回总金额"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/wenzi_hei_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥88.0"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:textSize="18sp"
                    android:textColor="@color/qian_red"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/homef7"
                />
            <RelativeLayout
                android:id="@+id/rl_return_success_2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退回微信"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/wenzi_hei_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥88.0"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/wenzi_hei_2"
                    />
            </RelativeLayout>

            <!--审核拒绝-->
            <TextView
                android:id="@+id/rl_return_refuse"
                android:visibility="gone"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家拒绝原因商家拒绝原因商家拒绝原因商家拒绝原因商家拒绝原因商家拒绝原因商家拒绝原因"
                android:textColor="@color/wenzi_hei_2" android:textSize="15sp"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/homef7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款信息"
                android:textSize="15sp"
                android:textColor="@color/wenzi_hei_2"
                android:layout_margin="15dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款原因："
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_period_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额："
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_return_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥199.00"
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请件数："
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_apply_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请时间："
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/txt_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-08-25 18:25"
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款编号："
                    android:textSize="13sp" android:id="@+id/discount_type_id"
                    android:textColor="@color/wenzi_hei"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_return_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1546545646556415415"
                    android:textSize="13sp"
                    android:textColor="@color/wenzi_hei"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/ll_bottom_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/white"
            android:id="@+id/btn_logistics_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_white_cicle_1"
            android:text="退货物流"
            android:textSize="13sp" />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/btn_apply_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_white_cicle_1"
            android:text="申请退货"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
