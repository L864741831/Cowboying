<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/homef7"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.activity.CowClaimPastRecordActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" android:orientation="horizontal"
            android:paddingLeft="10dp" android:layout_marginTop="6dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@mipmap/cowsselect" android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="牛只编号"
                android:layout_gravity="center_vertical"
                android:textSize="13sp" android:layout_marginLeft="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cows_identify_rv"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content" android:id="@+id/cows_identify_id"
                    android:layout_height="wrap_content" android:text="BROKE1020"
                    android:drawableRight="@mipmap/enterright" android:gravity="center_vertical"
                    android:layout_alignParentRight="true" android:textSize="13sp"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>