<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@color/white"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".view.activity.CowsDesInfoActivity">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="13dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" android:text="牛只编号"
            android:gravity="center" android:textSize="14sp"/>
        <TextView
            android:id="@+id/cows_identify_id"
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" android:text="BROKE1020"
            android:gravity="center" android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="13dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" android:text="月龄"
            android:gravity="center" android:textSize="14sp"/>
        <TextView
            android:id="@+id/cows_mouth_id"
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" android:text="6.0月"
            android:gravity="center" android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="13dp"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" android:text="体重"
            android:gravity="center" android:textSize="14sp"/>
        <TextView
            android:id="@+id/cows_weight_id"
            android:layout_width="0dp" android:layout_weight="0.5"
            android:layout_height="wrap_content" android:text="325.2KG"
            android:gravity="center" android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="200dp" android:id="@+id/cows_img_id"
        android:layout_height="120dp" android:scaleType="fitXY"
        android:layout_gravity="center" android:layout_marginTop="13dp"/>
</LinearLayout>