<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/homef7"
    android:layout_height="match_parent">

    <include layout="@layout/include_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售后方式"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/wenzi_hei_2"
                    />
                <TextView
                    android:id="@+id/tv_return_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray_999999"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:id="@+id/btn_return_reason"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款原因"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/wenzi_hei_2"
                    />
                <TextView
                    android:id="@+id/tv_return_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:layout_marginTop="-5dp"
                    android:drawableRight="@mipmap/enterright"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/wenzi_hei_2"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_other"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:background="@color/white"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_666666"
                android:layout_marginTop="1dp"
                android:text="请在退款说明处填写真实情况"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="42dp">
                <TextView
                    android:id="@+id/tv_weizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额："
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/wenzi_hei_2"
                    />
                <TextView
                    android:id="@+id/tv_return_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:layout_toRightOf="@+id/tv_weizhi"
                    android:textSize="19sp"
                    android:textColor="@color/qian_red"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_return_gray_info"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_666666"
                android:text="最多￥---.含发货运费￥---"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:id="@+id/tv_weizhi_2"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款说明："
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/wenzi_hei_2"
                    />
                <EditText
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_return_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="选填"
                    android:background="@null"
                    android:textSize="14.5sp"
                    android:textColor="@color/gray_999999"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="确定"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</LinearLayout>
