<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="50dp"
    android:background="@color/white"
    tools:context=".view.activity.InviteFriendHistoryActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="45dp" android:id="@+id/code_txt_id"
            android:layout_height="wrap_content" android:textSize="15sp"
            android:text="1" android:textColor="@color/colorAccent"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true"
            android:maxLines="1" android:ellipsize="end"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp" android:id="@+id/head_img_id"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent" android:id="@+id/nickname_txt_id"
        android:layout_height="wrap_content" android:textSize="15sp"
        android:text="陌上花开" android:textColor="@color/colorAccent"
        android:layout_marginLeft="15dp" android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp" android:maxLines="1"
        android:ellipsize="end" android:gravity="center_horizontal"/>
</LinearLayout>