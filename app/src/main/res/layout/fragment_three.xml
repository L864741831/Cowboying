<?xml version="1.0" encoding="utf-8"?>
<com.ibeef.cowboying.view.customview.SuperSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:id="@+id/swipe_ly"
    android:layout_height="match_parent" android:background="@color/colorAccent"
    tools:context=".view.fragment.ThreeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp" android:background="@mipmap/headbg"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:orientation="horizontal"
                        android:layout_alignParentRight="true" android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:layout_width="35dp" android:id="@+id/messege_id"
                            android:layout_height="35dp" android:layout_marginRight="5dp"
                            android:src="@mipmap/messegeme"/>
                        <ImageView
                            android:layout_width="35dp" android:id="@+id/setting_id"
                            android:layout_height="35dp" android:src="@mipmap/settingme"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="wrap_content" android:id="@+id/fm_id"
                        android:layout_height="wrap_content" android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/head_img" android:layout_width="67dp"
                            android:layout_height="67dp" android:src="@mipmap/defaulthead" />
                        <ImageView
                            android:layout_width="22dp" android:id="@+id/level_id"
                            android:layout_height="22dp" android:src="@mipmap/levelme"
                            android:layout_marginTop="45dp" android:layout_marginLeft="45dp"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content" android:id="@+id/name_id"
                        android:layout_height="wrap_content" android:textColor="@color/white"
                        android:text="全民养牛" android:layout_toRightOf="@+id/fm_id"
                        android:layout_marginTop="65dp" android:layout_marginLeft="15dp"
                        android:textSize="15sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:id="@+id/pay_money_codeId"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="0.25" android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_gravity="center" android:src="@mipmap/paymoneycode"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textSize="13sp"
                            android:text="付款码" android:textColor="@color/white"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/please_codeId" android:visibility="gone"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="0.25" android:orientation="vertical"  >

                        <ImageView
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_gravity="center" android:src="@mipmap/pleasecode"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textSize="13sp"
                            android:text="邀请码" android:textColor="@color/white"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/get_goods_codeId"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="0.25" android:orientation="vertical"  >

                        <ImageView
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_gravity="center" android:src="@mipmap/getgoodscode"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textSize="13sp"
                            android:text="取货码" android:textColor="@color/white"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" android:id="@+id/all_order_id">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="我的订单" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="全部订单"
                    android:textColor="@color/black" android:textSize="14sp"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                   style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <LinearLayout
                    android:id="@+id/wait_to_pay_id"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center" android:src="@mipmap/waittopay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="待付款" android:textColor="@color/black"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wait_to_delevery_id"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center" android:src="@mipmap/waitdelevery"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="待发货" android:textColor="@color/black"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wait_get_goods_id"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center" android:src="@mipmap/waitgetgoods"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="待收货" android:textColor="@color/black"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wait_push_goods_id"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center" android:src="@mipmap/waitpushgoods"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="待取货" android:textColor="@color/black"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/after_sale_goods_id"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center" android:src="@mipmap/after_sale"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="售后" android:textColor="@color/black"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line" android:layout_marginTop="17dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/me_cattle_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="我的牛只" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content" android:id="@+id/cattle_num_id"
                    android:layout_height="wrap_content" android:text=""
                    android:textColor="@color/red" android:textSize="14sp"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/cattle_oder_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="我的拼牛" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" android:background="@color/homef7"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/all_money_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="总资产" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content" android:id="@+id/all_money_id"
                    android:layout_height="wrap_content" android:text=""
                    android:textColor="@color/red" android:textSize="14sp"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent" android:visibility="gone"
                android:layout_height="50dp" android:id="@+id/beef_house_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="牛肉仓库" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/write_money_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="会员卡" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content" android:id="@+id/write_money_id"
                    android:layout_height="wrap_content" android:text=""
                    android:textColor="@color/red" android:textSize="14sp"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/coupon_num_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="优惠券" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content" android:id="@+id/coupon_num_id"
                    android:layout_height="wrap_content" android:text=""
                    android:textColor="@color/red" android:textSize="14sp"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" android:background="@color/homef7"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/contract_id_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="我的合同" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/invite_friend_id_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="邀请好友" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/nomal_question_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="常见问题" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line2" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"  android:id="@+id/tell_us_id_rv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/black"
                    android:text="联系我们" android:layout_marginLeft="20dp"
                    android:textSize="14sp" android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/enterright" android:layout_alignParentRight="true"
                    android:gravity="center" android:layout_centerVertical="true"/>
                <View
                    style="@style/line" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" android:background="@color/homef7"/>
        </LinearLayout>

    </ScrollView>
</com.ibeef.cowboying.view.customview.SuperSwipeRefreshLayout>